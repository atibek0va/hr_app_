<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewQuestionActivity">

    <include
        android:id="@+id/tb_question"
        layout="@layout/toolbar_questions" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputQuestion"
        android:layout_width="316dp"
        android:layout_height="200dp"
        android:background="@drawable/layout_bg"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Write your question"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_question"
        app:layout_constraintVertical_bias="0.358" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_bg"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Write date"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputQuestion" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="184dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_design3"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#5F7CC6"
            android:textFontWeight="600"
            android:textSize="18dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="#00000000"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#CDBDBD"
            android:textFontWeight="600"
            android:textSize="18dp"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>