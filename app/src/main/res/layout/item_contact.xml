<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/item_contact_img"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        tools:srcCompat="@drawable/contact" />

    <TextView
        android:id="@+id/item_contact_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="William Faolon"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_contact_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_contact_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Deputy Director of HR"
        android:textFontWeight="400"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/item_contact_img"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_name" />

    <TextView
        android:id="@+id/item_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="+ (7262) 43 56 21"
        android:textFontWeight="400"
        app:layout_constraintStart_toEndOf="@+id/item_contact_img"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_post" />

    <TextView
        android:id="@+id/item_contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="mrwilliamf@gmail.com"
        app:layout_constraintStart_toEndOf="@+id/item_contact_img"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_number" />

</androidx.constraintlayout.widget.ConstraintLayout>