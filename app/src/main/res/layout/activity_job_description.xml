<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.guest.JobDescriptionActivity">

    <include
        android:id="@+id/tb"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/third_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:text="Product Designer"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:background="@drawable/gggg"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/jobSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$400/month"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"/>

                <TextView
                    android:id="@+id/jobTime"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Full Time"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/black"
                    android:background="@drawable/layout_bg"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_horizontal" />
            </LinearLayout>


            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Job description"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Weâ€™re seeking a Product designer to focus on designing a seemless experience for our customers.By partnering up with the consumer product team,you will explore now opportunities to create user centric products from discovery to delivery."
                android:textColor="#C4C4C4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Preffered Qualifications"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pref_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="5 years of product design experience(and the partfolio to back it up) as a key,hands-on product designer \nExcellent eye for aesthetic design and customer appeal \nGood understanding of color science and combinations \nAble to sit in front of a computer for long hours at a time"
                android:textColor="#C4C4C4"
                android:maxLines="10"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btnApply"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_design"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="false"
                android:text="Apply now"
                android:layout_gravity="center"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="12sp"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>